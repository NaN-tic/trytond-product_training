<tryton>
    <data>
        <!-- product.template -->
        <record model="ir.ui.view" id="template_view_form">
            <field name="model">product.template</field>
            <field name="inherit" ref="product.template_view_form"/>
            <field name="name">template_form</field>
        </record>
        <record model="ir.ui.view" id="template_view_tree">
            <field name="model">product.template</field>
            <field name="inherit" ref="product.template_view_tree"/>
            <field name="name">template_tree</field>
        </record>

        <!-- product.product -->
        <record model="ir.ui.view" id="product_view_form">
            <field name="model">product.product</field>
            <field name="inherit" ref="product.product_view_form"/>
            <field name="name">product_form</field>
        </record>

        <!-- menu -->
        <record model="ir.action.act_window" id="act_product_training_form">
            <field name="name">Training</field>
            <field name="res_model">product.template</field>
            <field name="domain">[('training', '=', True)]</field>
        </record>
        <record model="ir.action.act_window.view" id="act_product_training_list_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="product.template_view_tree"/>
            <field name="act_window" ref="act_product_training_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_product_training_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="product.template_view_form"/>
            <field name="act_window" ref="act_product_training_form"/>
        </record>

        <menuitem name="Training"
            parent="product.menu_main_product"
            action="act_product_training_form"
            id="menu_product_training"
            sequence="30"/>
    </data>
</tryton>
